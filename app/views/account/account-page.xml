            </Button>

            <Button class="bg-gray-100 p-4 rounded-full mb-4" tap="{{ onGoogleLogin }}">
                <FormattedString>
                    <Span text="G " />
                    <Span text="Continue With Google"/>
                </FormattedString>
            </Button>

  

            <!-- General Section -->
            <Label text="General" class="text-2xl font-bold mb-4"/>
            
